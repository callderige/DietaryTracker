<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:id="@+id/activity_cardio_entry">

    <EditText
        android:id="@+id/edit_text_cardio_name"
        android:layout_width="match_parent"
        android:inputType="textCapSentences"
        android:hint="Enter cardio name"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit_text_cardio_hours"
        android:layout_width="match_parent"
        android:layout_below="@+id/edit_text_cardio_name"
        android:inputType="number"
        android:hint="Hours"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit_text_cardio_minutes"
        android:layout_below="@+id/edit_text_cardio_hours"
        android:layout_width="match_parent"
        android:inputType="number"
        android:hint="Minutes"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit_text_cardio_distance"
        android:layout_below="@+id/edit_text_cardio_minutes"
        android:layout_width="match_parent"
        android:inputType="number"
        android:hint="Distance (miles)"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit_text_cardio_laps"
        android:layout_below="@+id/edit_text_cardio_distance"
        android:layout_width="match_parent"
        android:inputType="number"
        android:hint="Laps"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/submit"
        android:layout_below="@+id/edit_text_cardio_laps"
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="@color/textColorPrimary"
        android:layout_centerInParent="true"
        android:text="Submit"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
</RelativeLayout>